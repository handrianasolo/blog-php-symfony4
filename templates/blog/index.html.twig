{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="../assets/dist/css/bootstrap.css">
    <link rel="stylesheet" href="../css/style.css">
{% endblock %}

{% block body %}

<div class="album py-5 bg-light">
    <div class="container">

        <div class="row">
            <!-- All articles -->
            {% for article in articles %}
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                            <div class="card-header">
                                {{ article.title }}    
                            </div>
                        <img class="card-img-top" src="{{ article.image }}" alt="A generic placeholder image in a figure.">
                        <div class="card-body">
                            <p class="card-text">{{ article.content }}</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <p>
                                    <a class="btn btn-secondary my-2" href="{{ path('article_page', {'id': article.id}) }}" 
                                    role="button">View &raquo;</a>
                                </p>
                                <small class="text-muted">{{ article.createdAt | date('d/m/Y') }}</small>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>

{% endblock %}
